<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.mybatis.mapper.BusMapper">

    <select id="selectBus" resultType="com.mybatis.beginner.Bus">
        select * from c0094835.Bus;
    </select>

    <insert id="insertBus" parameterType="com.mybatis.beginner.Bus">
        inserts into c0094835.Bus (type, length, description)
        values (#{type}, #{length}, #{description});
    </insert>

    <delete id="deleteBus"  parameterType="String">
        delete from c0094835.Bus where type=#{type};
    </delete>

    <update id="updateBus"  parameterType="com.mybatis.beginner.Bus">
        update c0094835.Bus set length=#{length} where type=#{type};
    </update>
</mapper>

