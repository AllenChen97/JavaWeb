<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        https://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--  传统的程序通过程序本身来控制对象生成  -->
    <!--    使用Spring后，通过Spring读取xml来统一生成、管理对象   -->
<!--    <bean id="hello" class="com.spring.a_intro.Person">-->
<!--        <property name="name" value="Spring"/>-->
<!--    </bean>-->

    <!--  有参构造  -->
<!--    <bean id="hello" class="com.spring.a_intro.Person">-->
<!--        <constructor-arg index="0" value="HelloSpring"></constructor-arg>-->
<!--    </bean>-->

    <bean id="student" class="com.spring.a_intro.Person">
        <constructor-arg type="java.lang.String" value="HelloSpring"></constructor-arg>
    </bean>

<!--    <alias name="student" alias="hahahahaha"></alias>-->

    <import resource="p_c_namespace.xml"></import>
    <import resource="annotation.xml"></import>

    <bean id="classConfig" class="com.spring.a_intro.Class">
        <!--    普通value注入    -->
        <property name="name" value="高三1班"/>
        <property name="numberofStudent" value="33"/>

        <!--    Bean注入    -->
        <property name="student" ref="student"/>

        <!--    list列表/array数组    -->
        <property name="list">
            <list>
                <value>aa</value>
                <value>bb</value>
                <value>cc</value>
            </list>
        </property>

        <!--    map注入    -->
        <property name="map">
            <map>
                <entry key="aa" value="12345"></entry>
                <entry key="bb" value="1234"></entry>
                <entry key="cc" value="123"></entry>
            </map>
        </property>

        <!--    set注入    -->
        <property name="set">
            <set>
                <value>12345</value>
                <value>123</value>
                <value>12345</value>
            </set>
        </property>

        <!--    null注入    -->
        <property name="nu">
            <null/>
        </property>

        <!--    null注入    -->
        <property name="properties">
            <props>
                <prop key="aa">123456</prop>
                <prop key="bb">12345</prop>
                <prop key="cc">1234</prop>
            </props>
        </property>

    </bean>

</beans>