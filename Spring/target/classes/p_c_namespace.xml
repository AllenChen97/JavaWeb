<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="p_NameSpace" class="Person" p:name="大雄"></bean>
    <bean id="p_NameSpace2" class="Person" c:name="胖虎"></bean>

    <!--  5.有singleton单例和prototype原型模式，另外request,session,application在web开发里面才能用到  -->
    <bean id="singleton" class="Person" p:name="大雄" scope="singleton"></bean>
    <bean id="prototype" class="Person" c:name="胖虎" scope="prototype"></bean>

    <!--  6.Bean的自动装配  -->
    <bean id="autowritebyName" class="Class" autowire="byName">
        <property name="name" value="aaa"></property>
    </bean>

<!--    <bean id="autowritebyType" class="Class" autowire="byType">-->
<!--        <property name="name" value="aaa"></property>-->
<!--    </bean>-->
</beans>